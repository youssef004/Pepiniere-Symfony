
{% extends 'base.html.twig' %}

{% block content %}
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Mes annonce</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Les Annonce</a></li>
                        <li class="breadcrumb-item active">fresia</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>




    <div class="latest-blog">
        <div class="container">

            <div class="row">
                {% for i in list %}

                    <div class="col-md-6 col-lg-4 col-xl-4">
                    <div class="blog-box">
                        <div class="blog-img">
                            <img class="img-fluid" src="{{ asset('/integration/public/uploads/')~i.imageName}}" alt="" />
                        </div>
                        <div class="blog-content">
                            <div class="title-blog">
                                <h3>{{ i.Titre }} :{{ i.Type }}</h3>
                                <p>{{ i.Description }}</p>
                                <small>{{ i.DateAnnonce|date('y-m-d') }}</small>
                            </div>
                            <ul class="option-blog">
                                <li><a  href="{{ path('annuler',{'id':i.Id}) }}"><i  class="fas fa-user-slash"></i></a></li>
                            </ul>

                        </div>
                    </div>
                </div>


                {% endfor %}
            </div>
        </div>
    </div>



{% endblock %}